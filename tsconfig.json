{
   "compilerOptions": {
    "outDir": "dist",  // 输出目录
    "sourceMap": true, // 生成sourceMap
    "target": "es2016", // 目标版本
    "module": "esnext", // 模块系统
    "moduleResolution": "node", // 模块解析策略
    "strict": false, // 启用严格模式
    "resolveJsonModule": true, // 允许解析JSON文件
    "esModuleInterop": true, // 允许es6导入common.js
    "jsx": "preserve", // 保留jsx语法
    "lib": ["ESNext", "DOM"], // 
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
   }
}